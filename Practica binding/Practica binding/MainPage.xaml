<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica_binding.MainPage"
             Title="Recibir información">

    <StackLayout  Margin="10">
        <Label Text="Nombre" FontSize="Title" />
        <Entry Placeholder="Nombre" x:Name="TxtNombre"></Entry>
        <Label Text="Apellidos" FontSize="Title" />
        <Entry Placeholder="Apellido" x:Name="TxtApellido"></Entry>
        <Label Text="Edad" FontSize="Title" />
        <Entry  Placeholder="0" x:Name="TxtEdad"></Entry>
        <Label Text="Correo Electronico" FontSize="Title"/>
        <Entry Placeholder="correo" Keyboard="Email" x:Name="TxtCorreo"></Entry>
        <Button Clicked="BtnEnviar_Clicked" x:Name="BtnEnviar" Padding="10,10,10,10" BackgroundColor="Crimson" TextColor="White" Text="Enviar Mensaje"></Button>
    </StackLayout>

</ContentPage>
